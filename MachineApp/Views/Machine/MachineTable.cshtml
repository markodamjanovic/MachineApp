@{
    ViewData["Title"] = "Machine Table";
}

@model IEnumerable<Machine>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div> 
    <div class="row">
        <div class="col">
             <h3>Machines </h3> 
        </div>
        <div class="col-auto">
             <form method="post" asp-action="Edit" asp-controller="Machine">
                    <input type="hidden" name="id" value="0" class="form-control"/>
                    <button class="btn btn-primary" type="submit"> 
                        <i class="fa fa-plus-square fa-lg" aria-hidden="true"> </i> New Machine
                    </button>
            </form> 
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="text-center">
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Company</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
                @{
                    foreach (Machine machine in Model)
                    {
                        <tr class="text-center">
                            <th> <i  class="fa fa-cogs fa-lg" aria-hidden="true"></i> </th>
                            <td> @machine.Name </td>
                            <td> @machine.Description </td>
                            <td> @machine.Company </td>
                            <td> 
                                  <form method="post" asp-action="Edit" asp-controller="Machine">
                                    <input type="hidden" name="id" value="@machine.id" class="form-control"/>
                                    <button type="submit" class="btn btn-primary"> 
                                           <i class="fa fa-pencil fa-lg" aria-hidden="true">  </i>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form method="post" asp-action="Delete" asp-controller="Machine">
                                    <input type="hidden" name="id" value="@machine.id" class="form-control"/>
                                        <button class="btn" type="submit"> 
                                            <i class="fa fa-trash fa-lg" aria-hidden="true">  </i>
                                        </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
        </tbody>
    </table>
    </div>
</div>